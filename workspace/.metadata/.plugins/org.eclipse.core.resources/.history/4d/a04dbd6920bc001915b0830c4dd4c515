package drawpic;
import java.awt.*;
import javax.swing.*;

public class MyFrame {
	JFrame frame;
	public MyFrame() {
		frame = new JFrame();
		Container c = frame.getContentPane();
		JPanel menubox = new JPanel();
		JPanel mainbox = new JPanel(new BorderLayout());
		c.setLayout(new FlowLayout(FlowLayout.LEFT));
		AllPanel all = new AllPanel();
		menubox.add(all.menu);
		mainbox.add(all.westPanel,BorderLayout.WEST);
		mainbox.add(all.northPanel,BorderLayout.NORTH);
		mainbox.add(all.centerPanel,BorderLayout.CENTER);
		c.add(menubox);
		c.add(mainbox);
		c.setBackground(new Color(210,210,210));
		frame.setSize(1200,700);
		frame.setVisible(true);
		frame.setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
	}
	public static void main(String[] args) {
		new MyFrame();
	}
}
