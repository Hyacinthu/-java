package drawpic;
import java.awt.*;
import javax.swing.*;

public class FontTool {
	JComboBox<JLabel> fontTool;
	public FontTool() {
		fontTool = new JComboBox<JLabel>();
		//获取当前系统内所有可用字体
		String[] g = GraphicsEnvironment.getLocalGraphicsEnvironment().getAvailableFontFamilyNames();
		JLabel temp = new JLabel();
		for(int i=0;i<g.length;i++) {
			temp.setText(g[i]);//循环写入字体内
			temp.setFont(new Font(g[i],0,15));
			fontTool.addItem(temp);
		}
	}
}
