package drawpic;

import java.awt.*;
import javax.swing.*;

@SuppressWarnings("serial")
public class HelpDialog extends JDialog{
	public HelpDialog(JFrame frame) {
		super(frame,"帮助",true);
		Container c = getContentPane();
		JLabel[] show = new JLabel[14];
		show[0] = new JLabel("刷子");
		show[1] = new JLabel("圆形");
		show[2] = new JLabel("圆角矩形");
		show[3] = new JLabel("取色笔");
		show[4] = new JLabel("曲线");
		show[5] = new JLabel("橡皮");
		show[6] = new JLabel("填色桶");
		show[7] = new JLabel("放大镜");
		show[8] = new JLabel("直线");
		show[9] = new JLabel("铅笔");
		show[10] = new JLabel("矩形");
		show[11] = new JLabel("选定框");
		show[12] = new JLabel("喷枪");
		show[13] = new JLabel("文本框");
		JPanel t = new JPanel(new GridLayout(14,1));
		for(int i=0;i<14;i++) {
			t.add(show[i]);
		}
		c.add(t);
		this.setBounds(300, 50, 400, 700);
		this.setResizable(false);
		this.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
	}
}
