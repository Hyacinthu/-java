package drawpic;
import java.awt.*;
import javax.swing.*;

/**
 * 
 * @author ASUS
 *
 * @time 下午4:00:15
 *
 * @description 对combine进行处理，简化传入frame中的参数个数
 *
 */

public class AllPanel {
	JMenuBar menu;
	JPanel westPanel,northPanel;
	JScrollPane centerPanel;//定义三个区
	public AllPanel() {
		westPanel = new JPanel(new 	GridLayout(7,2));//七行两列
		westPanel.setPreferredSize(new Dimension(100,700));
		menu = new JMenuBar();
		menu.setPreferredSize(new Dimension(130,35));
		menu.setLayout(new FlowLayout(FlowLayout.LEFT));//设置菜单栏属性
		northPanel = new JPanel(new FlowLayout(FlowLayout.LEFT));
		northPanel.setPreferredSize(new Dimension(1200,100));
		AllCombine allCombine = new AllCombine();
		for(int i=0;i<allCombine.allPenButton.length;i++) {
			westPanel.add(allCombine.allPenButton[i].button);//添加到西区面板上
		}
		for(int i=0;i<allCombine.allMenuMenu.length;i++) {
			menu.add(allCombine.allMenuMenu[i]);
		}
		JPanel[] tools = new JPanel[3];//将北区分为三块
		//添加字体栏组件
		tools[0] = new JPanel(new GridLayout(3,2));
		tools[0].add(allCombine.allToolLabel[3]);
		tools[0].add(allCombine.allToolButton[3].button);
		tools[0].add(allCombine.fontToolBox);
		tools[0].add(allCombine.allToolButton[4].button);
		tools[0].add(allCombine.fontSizeToolBox);
		tools[0].add(allCombine.allToolButton[5].button);//为了让显示更舒服，但还没测试
		tools[0].setPreferredSize(new Dimension(250,80));
		//添加大小组件
		tools[1] = new JPanel(new GridLayout(2,1));
		tools[1].add(allCombine.allToolLabel[2]);
		tools[1].add(allCombine.sizeToolBox);
		tools[0].setPreferredSize(new Dimension(250,80));
		//添加颜色组件
		tools[2] = new JPanel(new GridLayout(1,4));
		JPanel colorBox = new JPanel(new GridLayout(2,10));//用来装小颜色区
		for(int i=0;i<20;i++) {
			colorBox.add(allCombine.allToolColor[i]);
		}
		tools[2].add(allCombine.allToolButton[0].button);
		tools[2].add(allCombine.allToolButton[1].button);
		tools[2].add(colorBox);
		tools[2].add(allCombine.allToolButton[2].button);
		JPanel tool =new JPanel(new FlowLayout(FlowLayout.LEFT));
		tool.setPreferredSize(new Dimension(200,50));
		for(int i=0;i<3;i++) {
			tool.add(tools[i]);
		}
		northPanel.add(tool);
		tools[0].setPreferredSize(new Dimension(350,80));
		//添加画布区
		centerPanel = new JScrollPane(allCombine.canvas);
	}
	
}
