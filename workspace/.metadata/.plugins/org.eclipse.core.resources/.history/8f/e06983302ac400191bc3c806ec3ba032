package drawpic;

import java.awt.*;
import javax.swing.*;

@SuppressWarnings("serial")
public class HelpDialog extends JDialog{
	public HelpDialog(JFrame frame) {
		super(frame,"帮助",true);
		Container c = getContentPane();
		JLabel sep = new JLabel("-------------------------------------------",JLabel.CENTER);
		JLabel[] show = new JLabel[14];
		show[0] = new JLabel("  刷子：拖动触发，粗细比铅笔的大一些，颜色为前景色");
		show[1] = new JLabel("  圆形：拖动触发，可以调节位置，颜色为前景色");
		show[2] = new JLabel("  圆角矩形：拖动触发，可以调节位置，颜色为前景色");
		show[3] = new JLabel("  取色笔：单击触发，获取点击部分的颜色");
		show[4] = new JLabel("  曲线：拖动触发，可以调节位置，颜色为前景色");
		show[5] = new JLabel("  橡皮：拖动触发，可以调节位置，颜色为背景色");
		show[6] = new JLabel("  填色桶：单击触发，用前景色填充该封闭区域，由于算法原因，可能会有延迟");
		show[7] = new JLabel("  放大镜：单击触发，左键放大，右键缩小，有最大值和最小值");
		show[8] = new JLabel("  直线：拖动触发，可以调节位置，颜色为前景色");
		show[9] = new JLabel("  铅笔：拖动触发，粗细比铅笔的大一些，颜色为前景色");
		show[10] = new JLabel("  矩形：拖动触发，可以调节位置，颜色为前景色");
		show[11] = new JLabel("  选定框：拖动触发，可以调节位置，拖动结束会将该位置的图像截取出来，以背景色填补空余位置");
		show[12] = new JLabel("  喷枪：拖动触发，粗细比铅笔的大一些，颜色为前景色");
		show[13] = new JLabel("  文本框：单击触发，以点击位置为中心放置一个文本框，可以进行输入");
		JPanel t = new JPanel(new GridLayout(27,1));
		for(int i=0;i<13;i++) {
			t.add(show[i]);
			t.add(sep);
		}
		t.add(show[13]);
		c.add(t);
		this.setBounds(300, 50, 400, 700);
		this.setResizable(false);
		this.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
	}
}
