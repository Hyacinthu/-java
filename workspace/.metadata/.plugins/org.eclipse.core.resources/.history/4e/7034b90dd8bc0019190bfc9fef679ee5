package drawpic;
import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class LeftButtonListener implements ActionListener{
	Button[] button;
	int flag;
	public LeftButtonListener(Button[] b,int s) {//传入按钮，以顺序作为标志来完成选定的更改，更改背景颜色
		button = b;
		flag = s;
	}
	@Override
	public void actionPerformed(ActionEvent arg0) {
		// TODO Auto-generated method stub
		Color temp = new Color(50,50,50);
		for(int i=0;i<button.length;i++) {
			if(button[i].button.getBackground().equals(temp)) {
				button[i].button.setBackground(new Color(127,127,127));
				button[i].button.updateUI();
			}
			if(i==flag) {
				button[i].button.setBackground(temp);
				button[i].button.updateUI();
			}
		}
	}
}
