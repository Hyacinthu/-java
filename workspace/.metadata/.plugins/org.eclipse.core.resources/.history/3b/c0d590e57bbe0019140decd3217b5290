package drawpic;
import java.awt.*;
import java.awt.image.*;
import java.io.*;
import javax.imageio.*;

/**
 * 
 * @author ASUS
 *
 * @time 下午2:27:09
 *
 * @description 残次品，等待实现
 *
 */

@SuppressWarnings("serial")
public class AllCanvas extends Canvas{
	Image image = null;
	public AllCanvas() {
		this.setSize(new Dimension(1200,700));
		try {
			BufferedImage bimg = ImageIO.read(new File("icon/pencil.png"));
			image = bimg;
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	@Override
	public void paint(Graphics g) {
		super.paint(g);
		g.drawImage(image, 0, 0, image.getWidth(this),image.getHeight(this), this);
	}
}
